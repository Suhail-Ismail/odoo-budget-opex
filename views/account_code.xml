<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!--START VIEWS-->
        <!--FORM VIEW-->
        <record model="ir.ui.view" id="view_form_account_code">
            <field name="name">Account Code</field>
            <field name="model">budget.opex.account.code</field>
            <field name="arch" type="xml">
                <form string="Account Code">
                    <header>

                        <!--<button-->
                                <!--string="Process"-->
                                <!--name="process"-->
                                <!--type="workflow"-->
                                <!--states="draft"/>-->
                        <!--<button-->
                                <!--string="Authorize"-->
                                <!--name="authorize"-->
                                <!--type="workflow"-->
                                <!--states="under process"/>-->
                        <!--<button-->
                                <!--string="Close"-->
                                <!--name="close"-->
                                <!--type="workflow"-->
                                <!--states="authorized"/>-->

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,under process,authorized,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="account_code" default_focus="1" placeholder="Account Code"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="year"/>
                                <field name="grouping"/>
                                <field name="operation_id" context="{'default_is_operation': True}"/>
                                <field name="expenditure_amount"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                            <field name="remarks"/>
                        </group>
                        <notebook>
                            <!--<page string="Account Code">-->
                                <!--<field name="account_code_ids"/>-->
                            <!--</page>-->
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!--CONTRACTOR FORM VIEW-->
        <record model="ir.ui.view" id="view_tree_account_code">
            <field name="name">Account Code</field>
            <field name="model">budget.opex.account.code</field>
            <field name="arch" type="xml">
                <tree decoration-success="state not in ['closed']"
                      decoration-muted="state in ['closed']">
                    <field name="operation_id"/>
                    <field name="account_code"/>
                    <field name="expenditure_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!--END CONTRACTOR VIEWS-->
        <!--START SEARCH-->
        <record model="ir.ui.view" id="search_account_code">
            <field name="name">Account Code Search</field>
            <field name="model">budget.opex.account.code</field>
            <field name="arch" type="xml">
                <search>
                    <field name="account_code"/>
                    <field name="state"/>
                    <filter
                            name="filter_state"
                            string="Need Action"
                            domain="[('state', 'not in', ['closed'])]"/>
                </search>
            </field>
        </record>
        <!--END SEARCH-->

        <!--START ACTIONS-->
        <!--Account Code Action-->
        <record model="ir.actions.act_window" id="action_account_code">
            <field name="name">Account Code</field>
            <field name="res_model">budget.opex.account.code</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_id" ref="view_tree_account_code"/>
            <!--<field name="search_view_id" ref="search_budget"/>-->
            <field name="context">{'form_view_ref': 'budget_capex.view_form_account_code',
                'search_default_filter_state': 1}
            </field>
        </record>
        <!--END ACTIONS-->
    </data>
</openerp>